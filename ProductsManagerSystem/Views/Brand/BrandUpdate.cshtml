@using CoreLayer.Dto
@{
    ViewData["Title"] = "BrandUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BrandDto

<h1>Marka Güncelleme</h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="BrandUpdate" method="post" asp-controller="Brand">

            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label>Marka Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Ürün Durumu</label>
                <input asp-for="isActive" class="form-check-input" style="width: 20px;
            height: 20px; display: flex" />
                <span asp-validation-for="isActive" class="text-danger"></span>
            </div>

            <div class="form-group"style="text-align:center">

                <input type="submit" value="Güncelle" class="btn btn-info" />

            </div>
        </form>
    </div>
</div>
