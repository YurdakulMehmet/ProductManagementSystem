@using CoreLayer.Dto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProductDto

<h1>Ürün Güncelleme</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" enctype="multipart/form-data" method="post" asp-controller="Product">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Ürün Bilgisi</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Ürün Fiyatı</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label>Kategorisi</label>
                <select asp-for="ParentCategoryId" asp-items="ViewBag.categories" class="form-control"></select>
            </div>

             <div class="form-group">
                <label>Kategorisi</label>
                <select asp-for="ChildCategoryId" asp-items="ViewBag.childCategories" class="form-control"></select>
            </div>
            
            <div class="form-group">
                <label>Markası</label>
                <select asp-for="BrandId" asp-items="ViewBag.brands" class="form-control"></select>
            </div>
            
            <div class="form-group">
                    <div class="col-md-10">
                        <input type="file" name="file" multiple  />
                    </div>
                </div> 

                <br />
                <br />
          
            @foreach (var item in Model.ProductPhoto)
            {
               <a href="/Content/Images/@item.ImageUrl" target="_blank">

                <img border="0" src="/Content/Images/@item.ImageUrl" width="100px"></a>
                <td  style="text-align:center"> <a style="height:25px; text-align:center" class="btn btn-danger" asp-controller="Product" asp-action="RemovePhoto" asp-route-id="@item.Id">Sil</a></td>
            }
            <br />
            

            <div class="form-group" style="text-align:center">

                <input type="submit" value="Güncelle" class="btn btn-info" />

            </div>
        </form>
    </div>
</div>
