@using CoreLayer.Dto
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CategoryDto


<h2>Kategori Ekle</h2>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Save" method="post" asp-controller="Category">

            <div class="form-group">
                <label>Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Kategori Üst Grubu</label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <select asp-for="ParentId" asp-items="ViewBag.categories" class="form-control"></select>
            </div>

           <br />

            <div class="form-group" style="text-align:center">

                <input type="submit" value="Ekle" class="btn btn-info" />

            </div>
        </form>
    </div>
</div>
