@using CoreLayer.Dto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CategoryDto

<h1>Kategori Güncelleme </h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Category">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Kategorisi</label>
                <select asp-for="ParentId" asp-items="ViewBag.categories" class="form-control"></select>

            </div>

            <div class="form-group">
                <label>Kategori Kodu</label>
                <input asp-for="Code" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group" style="text-align:center">

                <input type="submit" value="Güncelle" class="btn btn-info" />

            </div>
        </form>
    </div>
</div>
