@using CoreLayer.Dto
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CategoryDto

<h1>Kategori Güncelleme </h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="CategoryUpdate" method="post" asp-controller="Category">

            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label>Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label>Kategori Üst Grubu</label>
                <input asp-for="ParentId" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Kategori Kodu</label>
                <input asp-for="Code" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label>Ürün Durumu</label>
                <input asp-for="isActive" class="form-check-input" style="width: 20px;
            height: 20px; display: flex" />
                <span asp-validation-for="isActive" class="text-danger"></span>
            </div>

            <div class="form-group"style="text-align:center">

                <input type="submit" value="Güncelle" class="btn btn-info" />

            </div>
        </form>
    </div>
</div>
