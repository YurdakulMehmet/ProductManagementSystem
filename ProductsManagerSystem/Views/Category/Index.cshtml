@using CoreLayer.Models
@using X.PagedList.Mvc.Core
@using X.PagedList

@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Kategori Listesi</h2>

<form asp-controller="Category" asp-action="Index" method="get">
    <p>
        <b>Kategori Ara:</b> <input type="text" name="p"  />
        <input type="submit" value="Ara" class="btn btn-info" />
    </p>
</form>

<table class="table table-bordered" style="margin-right:90px">
    <tr>
        <th>Id</th>
        <th>Kategori</th>
        <th>Kod</th>
        <th>Durumu</th>

    </tr>

    @foreach (var item in Model)
    {
        if (item.isActive == true)
        {
            <tr>
                <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>Kategori Mevcut </td>
        </tr>
        }
    }

</table>

@Html.PagedListPager((IPagedList)Model,sayfa => Url.Action("Index",new {sayfa}))

<a href="/Category/Save" class="btn btn-primary">Kategori Ekle</a>

